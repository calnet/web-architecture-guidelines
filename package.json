{
  "name": "web-architecture-guidelines",
  "version": "1.2.0",
  "description": "Comprehensive guidelines for building well-architected web applications",
  "scripts": {
    "security:audit": "npm audit",
    "security:audit-fix": "npm audit fix", 
    "security:check": "npm audit --audit-level moderate",
    "lint": "npm run lint:all",
    "lint:templates": "./scripts/validate-templates.sh",
    "lint:architecture": "./scripts/validate-architecture.sh",
    "lint:security": "./scripts/validate-security.sh",
    "lint:performance": "./scripts/validate-performance.sh",
    "lint:all": "npm run lint:templates && npm run lint:architecture && npm run lint:security && npm run lint:performance",
    "type-check": "npx tsc --noEmit --skipLibCheck --project .",
    "test": "echo 'No tests specified yet'",
    "test:coverage": "echo 'No test coverage configured yet'",
    "docs:validate-structure": "./scripts/validate-docs-structure.sh",
    "docs:validate-templates": "npm run lint:templates",
    "validate:architecture": "npm run lint:architecture",
    "validate:security": "npm run lint:security",
    "validate:performance": "npm run lint:performance",
    "generate:compliance-report": "npm run compliance:report",
    "check:errors": "./scripts/check-project-errors.sh",
    "check:comprehensive": "npx tsc && npm run check:errors",
    "check:cross-references": "./scripts/validate-cross-references.sh",
    "check:cross-references-enhanced": "./scripts/validate-cross-references-enhanced.sh",
    "check:breaking-changes": "./scripts/detect-breaking-changes.sh",
    "compliance:enhance": "./scripts/enhance-template-compliance.sh",
    "compliance:report": "./scripts/generate-compliance-report.sh",
    "compliance:validate": "npm run compliance:enhance && npm run compliance:report",
    "validate:all": "npm run lint:all && npm run check:cross-references-enhanced",
    "versions:sync": "./scripts/sync-versions.sh",
    "versions:validate": "./scripts/validate-versions.sh",
    "versions:list": "./scripts/list-version-files.sh",
    "versions:discover": "./scripts/discover-version-files.sh",
    "versions:maintain": "./scripts/maintain-versions.sh",
    "versions:enhance": "./scripts/enhance-version-management.sh",
    "versions:bump": "./scripts/version-bump.sh",
    "versions:bump-major": "./scripts/version-bump.sh --type major",
    "versions:bump-minor": "./scripts/version-bump.sh --type minor",
    "versions:bump-patch": "./scripts/version-bump.sh --type patch",
    "release:prepare": "./scripts/release-manager.sh prepare",
    "release:validate": "./scripts/release-manager.sh validate",
    "release:publish": "./scripts/release-manager.sh publish",
    "release:status": "./scripts/release-manager.sh status",
    "release:list": "./scripts/release-manager.sh list",
    "release:rollback": "./scripts/release-manager.sh rollback",
    "changelog:generate": "./scripts/generate-changelog.sh",
    "templates:compatibility": "./scripts/generate-template-compatibility.sh",
    "templates:compatibility-json": "./scripts/generate-template-compatibility.sh docs/TEMPLATE_COMPATIBILITY.json json",
    "templates:compatibility-csv": "./scripts/generate-template-compatibility.sh docs/TEMPLATE_COMPATIBILITY.csv csv",
    "workflow:configure-secret": "./scripts/configure-anthropic-secret.sh",
    "workflow:validate-secret": "./scripts/configure-anthropic-secret.sh --validate",
    "workflow:test": "./scripts/test-workflow.sh",
    "workflow:test-dry": "./scripts/test-workflow.sh --dry-run",
    "workflow:test-secret": "./scripts/test-workflow.sh --validate-secret --dry-run",
    "workflow:monitor": "./scripts/monitor-workflow.sh",
    "workflow:monitor-report": "./scripts/monitor-workflow.sh --report",
    "workflow:monitor-performance": "./scripts/monitor-workflow.sh --performance",
    "workflow:monitor-dashboard": "./scripts/monitor-workflow.sh --dashboard",
    "workflow:optimize": "./scripts/monitor-workflow.sh --optimize",
    "next-steps:all": "npm run workflow:validate-secret && npm run workflow:test-dry && npm run workflow:monitor",
    "next-steps:configure": "npm run workflow:configure-secret",
    "next-steps:test": "npm run workflow:test",
    "next-steps:monitor": "npm run workflow:monitor-report"
  },
  "dependencies": {
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.1"
  }
}
