{
  "name": "web-architecture-guidelines",
  "version": "1.1.0",
  "description": "Comprehensive guidelines for building well-architected web applications",
  "scripts": {
    "security:audit": "npm audit",
    "security:audit-fix": "npm audit fix", 
    "security:check": "npm audit --audit-level moderate",
    "lint": "npm run lint:all",
    "lint:templates": "./scripts/validate-templates.sh",
    "lint:architecture": "./scripts/validate-architecture.sh",
    "lint:security": "./scripts/validate-security.sh",
    "lint:performance": "./scripts/validate-performance.sh",
    "lint:all": "npm run lint:templates && npm run lint:architecture && npm run lint:security && npm run lint:performance",
    "type-check": "npx tsc --noEmit --skipLibCheck --project .",
    "test": "echo 'No tests specified yet'",
    "test:coverage": "echo 'No test coverage configured yet'",
    "docs:validate-structure": "./scripts/validate-docs-structure.sh",
    "docs:validate-templates": "npm run lint:templates",
    "validate:architecture": "npm run lint:architecture",
    "validate:security": "npm run lint:security",
    "validate:performance": "npm run lint:performance",
    "generate:compliance-report": "npm run compliance:report",
    "check:errors": "./scripts/check-project-errors.sh",
    "check:comprehensive": "npx tsc && npm run check:errors",
    "check:cross-references": "./scripts/validate-cross-references.sh",
    "compliance:enhance": "./scripts/enhance-template-compliance.sh",
    "compliance:report": "./scripts/generate-compliance-report.sh",
    "compliance:validate": "npm run compliance:enhance && npm run compliance:report",
    "validate:all": "npm run lint:all && npm run check:cross-references",
    "versions:sync": "./scripts/sync-versions.sh",
    "versions:validate": "./scripts/validate-versions.sh",
    "versions:list": "./scripts/list-version-files.sh"
  },
  "dependencies": {
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.0"
  }
}
