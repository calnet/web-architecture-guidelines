# Application Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DB_POOL_SIZE=10
DB_SSL_MODE=prefer
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_QUERY_TIMEOUT=60000

# Database Optimization
DB_CONNECTION_POOL_ENABLED=true
DB_QUERY_OPTIMIZATION=true
DB_INDEX_OPTIMIZATION=true
DB_SLOW_QUERY_THRESHOLD=1000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Authentication & Security
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET_IN_PRODUCTION
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d
SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET_IN_PRODUCTION
BCRYPT_SALT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# External APIs
API_BASE_URL=https://api.example.com
API_KEY=REPLACE_WITH_YOUR_API_KEY
API_TIMEOUT=5000

# AI Services (for GitHub Actions workflows)
CLAUDE_API_KEY=REPLACE_WITH_ANTHROPIC_API_KEY

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=REPLACE_WITH_EMAIL_PASSWORD
EMAIL_FROM=noreply@example.com

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Analytics
MONITORING_ENABLED=true
ANALYTICS_ID=your-analytics-id

# Performance Configuration
COMPRESSION_ENABLED=true
GZIP_ENABLED=true
BROTLI_ENABLED=true
IMAGE_OPTIMIZATION=true
LAZY_LOADING=true
SERVICE_WORKER_ENABLED=true
CACHING_STRATEGY=aggressive

# Build Configuration
BUILD_OPTIMIZATION=true
MINIFICATION_ENABLED=true
TREE_SHAKING=true
CODE_SPLITTING=true
BUNDLE_ANALYZER=false

# Development/Testing
DEBUG=false
MOCK_EXTERNAL_SERVICES=false
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/test_database

# Production-specific (configure for production)
# HTTPS/SSL Configuration
HTTPS_ENABLED=true
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key
FORCE_HTTPS=true
TLS_MIN_VERSION=1.2

# Security Headers Configuration
SECURITY_HEADERS_ENABLED=true
HELMET_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# CDN Configuration
CDN_URL=https://cdn.example.com
CDN_ENABLED=true

# External Services
# SENTRY_DSN=your-sentry-dsn-url
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
