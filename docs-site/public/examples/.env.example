# Base Environment Variables (from base guidelines)
DATABASE_URL="postgresql://developer:development@localhost:5432/example_app"
JWT_SECRET="REPLACE_WITH_SECURE_JWT_SECRET_IN_PRODUCTION"
REDIS_URL="redis://localhost:6379"

# Security (base requirements)
BCRYPT_ROUNDS=12
SESSION_SECRET="REPLACE_WITH_SECURE_SESSION_SECRET_IN_PRODUCTION"
CORS_ORIGIN="http://localhost:3000"

# Project-Specific Variables (extensions)
# E-commerce Services
STRIPE_SECRET_KEY="sk_test_REPLACE_WITH_STRIPE_SECRET_KEY"
STRIPE_PUBLISHABLE_KEY="pk_test_REPLACE_WITH_STRIPE_PUBLISHABLE_KEY"
STRIPE_WEBHOOK_SECRET="whsec_REPLACE_WITH_WEBHOOK_SECRET"

# Search Service
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX_PREFIX="example_app"

# Email Service
EMAIL_SERVICE="mailhog"
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@example.com"

# File Upload
AWS_ACCESS_KEY_ID="REPLACE_WITH_AWS_ACCESS_KEY"
AWS_SECRET_ACCESS_KEY="REPLACE_WITH_AWS_SECRET_KEY"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="example-app-uploads"

# Analytics
GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"
MIXPANEL_TOKEN="REPLACE_WITH_MIXPANEL_TOKEN"

# Monitoring
SENTRY_DSN="REPLACE_WITH_SENTRY_DSN"
LOG_LEVEL="info"

# Feature Flags
FEATURE_NEW_CHECKOUT_FLOW=true
FEATURE_EXPERIMENTAL_SEARCH=false

# Development Tools
NODE_ENV="development"
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Cache Settings
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000